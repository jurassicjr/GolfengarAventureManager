{
  "compilerOptions": {

    "module": "commonjs",

    "allowJs": true,

    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",

    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"]
    },

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
